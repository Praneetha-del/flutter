import 'package:flutter/material.dart';

void main() {
  runApp(MyApp());
}

class MyApp extends StatelessWidget {
  @override
  Widget build(BuildContext context) {
    return MaterialApp(
      home: PrimeApp(),
    );
  }
}

class PrimeApp extends StatefulWidget {
  @override
  State<PrimeApp> createState() => _PrimeAppState();
}

class _PrimeAppState extends State<PrimeApp> {
  TextEditingController numCtrl = TextEditingController();
  String msg = '';

  bool checkPrime(int n) {
    if (n <= 1) return false;
    for (int i = 2; i < n; i++) {
      if (n % i == 0) return false;
    }
    return true;
  }

  @override
  Widget build(BuildContext context) {
    return Scaffold(
      appBar: AppBar(title: Text('Prime Checker')),
      body: Center(
        child: Column(
          mainAxisAlignment: MainAxisAlignment.center,
          children: [
            TextField(
              controller: numCtrl,
              decoration: InputDecoration(labelText: 'Enter number'),
              keyboardType: TextInputType.number,
            ),
            ElevatedButton(
              onPressed: () {
                int n = int.tryParse(numCtrl.text) ?? 0;
                setState(() {
                  msg = checkPrime(n)
                      ? '$n is Prime'
                      : '$n is Not Prime';
                });
              },
              child: Text('Check'),
            ),
            Text(msg, style: TextStyle(fontSize: 20)),
          ],
        ),
      ),
    );
  }
}
